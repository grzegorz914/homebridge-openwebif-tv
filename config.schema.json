{
  "pluginAlias": "OpenWebIfTv",
  "pluginType": "platform",
  "footerDisplay": "This plugin works with Sat Receivers basis on OpenWebIf interface which is available [here](https://github.com/grzegorz914/homebridge-openwebif-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "default": "Sat Receiver",
              "required": true
            },
            "host": {
              "title": "IP Address",
              "type": "string",
              "default": "192.160.1.10",
              "required": true,
              "format": "hostname"
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "default": 80,
              "maximum": 65535,
              "required": true
            },
            "auth": {
              "title": "Authentication",
              "type": "boolean",
              "default": false,
              "required": false
            },
            "user": {
              "title": "User",
              "type": "string",
              "required": false
            },
            "pass": {
              "title": "Password",
              "type": "string",
              "required": false
            },
            "volumeControl": {
              "title": "Volume control",
              "type": "boolean",
              "default": false,
              "required": false
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": false,
              "required": false
            },
            "bouquets": {
              "title": "Channels",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Channel name",
                    "type": "string",
                    "default": "TVN 24",
                    "required": true
                  },
                  "reference": {
                    "title": "Chanel reference",
                    "type": "string",
                    "default": "1:0:1:3DD2:640:13E:820000:0:0:0:",
                    "required": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
