  "layout": [
    {
      "key": "devices",
      "type": "tabarray",
      "title": "{{ value.name || 'device' }}",
      "items": [
        "devices[].name",
        "devices[].host",
        "devices[].port",
        {
          "key": "devices[]",
          "type": "section",
          "title": "Channels",
          "expandable": true,
          "expanded": false,
          "items": [
            "devices[].getInputsFromDevice",
            "devices[].inputsDisplayOrder",
            {
              "key": "devices[].bouquets",
              "type": "tabarray",
              "title": "{{ value.name || 'bouquet' }}",
              "items": [
                "devices[].bouquets[].name",
                "devices[].bouquets[].displayType",
                "devices[].bouquets[].namePrefix"
              ]
            },
            {
              "key": "devices[].inputs",
              "type": "tabarray",
              "title": "{{ value.name || 'channel' }}",
              "items": [
                "devices[].inputs[].name",
                "devices[].inputs[].reference",
                "devices[].inputs[].displayType",
                "devices[].inputs[].namePrefix"
              ]
            }
          ]
        },
        {
          "key": "devices[]",
          "type": "section",
          "title": "Buttons",
          "expandable": true,
          "expanded": false,
          "items": [
            {
              "key": "devices[].buttons",
              "type": "tabarray",
              "title": "{{ value.name || 'button' }}",
              "items": [
                "devices[].buttons[].name",
                "devices[].buttons[].mode",
                "devices[].buttons[].reference",
                "devices[].buttons[].command",
                "devices[].buttons[].displayType",
                "devices[].buttons[].namePrefix"
              ]
            }
          ]
        },
        {
          "key": "devices[]",
          "type": "section",
          "title": "Advanced Settings",
          "expandable": true,
          "expanded": false,
          "items": [
            {
              "key": "devices[]",
              "type": "tabarray",
              "title": "{{ value.title }}",
              "items": [
                {
                  "key": "devices[]",
                  "title": "Volume",
                  "items": [
                    "devices[].volumeControlNamePrefix",
                    "devices[].volumeControlName",
                    "devices[].volumeControl"
                  ]
                },
                {
                  "key": "devices[]",
                  "title": "Sensors",
                  "items": [
                    "devices[].sensorPower",
                    "devices[].sensorVolume",
                    "devices[].sensorMute",
                    "devices[].sensorChannel",
                    {
                      "key": "devices[]",
                      "type": "section",
                      "title": "Custom Channels",
                      "expandable": true,
                      "expanded": false,
                      "items": [
                        {
                          "key": "devices[].sensorInputs",
                          "type": "tabarray",
                          "title": "{{ value.name || 'sensor' }}",
                          "items": [
                            "devices[].sensorInputs[].name",
                            "devices[].sensorInputs[].reference",
                            "devices[].sensorInputs[].displayType",
                            "devices[].sensorInputs[].namePrefix"
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "key": "devices[]",
                  "title": "Authorization",
                  "items": [
                    "devices[].auth",
                    "devices[].user",
                    {
                      "key": "devices[].pass",
                      "type": "password"
                    }
                  ]
                },
                {
                  "key": "devices[]",
                  "title": "Device",
