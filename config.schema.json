  "layout": [{
    "key": "devices",
    "type": "tabarray",
    "title": "{{ value.name || 'new device' }}",
    "items": [
      "devices[].name",
      "devices[].host",
      "devices[].port",
      "devices[].auth",
      {
        "key": "devices[]",
        "type": "section",
        "title": "Inputs",
        "expandable": true,
        "expanded": false,
        "items": [{
          "key": "devices[].inputs",
          "type": "tabarray",
          "title": "{{ value.name || 'new input' }}",
          "items": [
            "devices[].inputs[].name",
            "devices[].inputs[].reference"
          ]
        }]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Buttons",
        "expandable": true,
        "expanded": false,
        "items": [{
          "key": "devices[].buttons",
          "type": "tabarray",
          "title": "{{ value.name || 'new button' }}",
          "items": [
            "devices[].buttons[].name",
            "devices[].buttons[].mode",
            "devices[].buttons[].reference",
            "devices[].buttons[].command",
            "devices[].buttons[].displayType"
          ]
        }]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Authorization",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].user",
          "devices[].pass"
        ],
        "condition": {
          "functionBody": "return model.devices[arrayIndices].auth === true;"
        }
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].enableDebugMode",
          "devices[].disableLogInfo",
          "devices[].disableLogDeviceInfo",
          "devices[].switchInfoMenu",
          "devices[].volumeControl"
        ]
      }
    ]
