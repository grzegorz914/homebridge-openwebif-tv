{
  "pluginAlias": "OpenWebIfTv",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "This plugin works with Sat Receivers basis on the OpenWebIf interface and are exposed to HomeKit as separate accessories and each needs to be manually paired.\n\n1. Open the Home <img src='https://user-images.githubusercontent.com/3979615/78010622-4ea1d380-738e-11ea-8a17-e6a465eeec35.png' height='16.42px'> app on your device.\n2. Tap the <img src='https://user-images.githubusercontent.com/3979615/78010869-9aed1380-738e-11ea-9644-9f46b3633026.png' height='16.42px'>.\n3. Tap *Add Accessory*, and select *I Don't Have a Code or Cannot Scan* or *More Options*.\n4. Select Your accessory.\n5. Enter the Homebridge PIN or scan the QR code, this can be found in Homebridge UI or Homebridge logs.\n6. Complete the accessory setup.",
	"footerDisplay": "This plugin is available [here](https://github.com/grzegorz914/homebridge-openwebif-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "placeholder": "Sat Receiver",
              "required": true
            },
            "host": {
              "title": "IP/Hostname",
              "type": "string",
              "placeholder": "192.160.1.10",
              "format": "hostname",
              "required": true
            },
            "port": {
              "title": "Port",
              "type": "integer",
              "placeholder": 80,
              "required": true
            },
            "auth": {
              "title": "Authorization",
              "type": "boolean",
              "default": false,
              "required": true
            },
            "user": {
              "title": "User",
              "type": "string",
              "placeholder": "User",
              "required": false
            },
            "pass": {
              "title": "Password",
              "type": "string",
              "placeholder": "Password",
              "required": false
            },
            "refreshInterval": {
              "title": "Refresh interval (sec)",
              "type": "integer",
              "default": 5,
              "minimum": 0,
              "maximum": 60,
              "required": true
            },
            "disableLogInfo": {
              "title": "Disable log info",
              "type": "boolean",
              "default": false,
              "description": "This disable log info, all values and state will not be displayed in Homebridge log console.",
              "required": true
            },
            "volumeControl": {
              "title": "Volume control mode",
              "type": "integer",
              "minimum": 0,
              "maximum": 2,
              "description": "Here select what a volume control mode You want to use. If select *None* only hardware buttons in RC app can be used to control volume.",
              "oneOf": [{
                  "title": "None",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Slider",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Fan",
                  "enum": [
                    2
                  ]
                }
              ],
              "required": true
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": false,
              "description": "This toggle behaviour for *I* button in RC app and *PowerModeSelection* in settings.",
              "required": true
            },
            "inputs": {
              "title": "Input",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "placeholder": "Input name",
                    "description": "Here set Your own name.",
                    "required": true
                  },
                  "reference": {
                    "title": "Reference",
                    "type": "string",
                    "placeholder": "Input reference",
                    "description": "Here set the reference.",
                    "required": true
                  }
                }
              }
            },
            "buttons": {
              "title": "Button",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "placeholder": "Button name",
                    "description": "Here set Your own name.",
                    "required": false
                  },
                  "reference": {
                    "title": "Reference",
                    "type": "string",
                    "placeholder": "Button name",
                    "description": "Here set the reference.",
                    "required": false
                  }
                }
              }
            },
            "manufacturer": {
              "name": "Manufacturer",
              "type": "string",
              "placeholder": "Manufacturer",
              "description": "Set the manufacturer name.",
              "required": false
            },
            "modelName": {
              "name": "Model",
              "type": "string",
              "placeholder": "Model",
              "description": "Set the model name.",
              "required": false
            },
            "serialNumber": {
              "name": "Serial Number",
              "type": "string",
              "placeholder": "SerialNumber",
              "description": "Set the serial number.",
              "required": false
            },
            "firmwareRevision": {
              "name": "Firmware Revision",
              "type": "string",
              "placeholder": "Firmware Revision",
              "description": "Set the firmware revision.",
              "required": false
            }
          }
        }
      }
    }
  },
  "layout": [{
    "key": "devices",
    "type": "tabarray",
    "title": "{{ value.name || 'new device' }}",
    "items": [
      "devices[].name",
      "devices[].host",
      "devices[].port",
      "devices[].auth",
      {
        "key": "devices[]",
        "type": "section",
        "title": "Inputs",
        "expandable": true,
        "expanded": false,
        "items": [{
          "key": "devices[].inputs",
          "type": "tabarray",
          "title": "{{ value.name || 'new input' }}",
          "items": [
            "devices[].inputs[].name",
            "devices[].inputs[].reference"
          ]
        }]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Buttons",
        "expandable": true,
        "expanded": false,
        "items": [{
          "key": "devices[].buttons",
          "type": "tabarray",
          "title": "{{ value.name || 'new button' }}",
          "items": [
            "devices[].buttons[].name",
            "devices[].buttons[].reference"
          ]
        }]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Authorization",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].user",
          "devices[].pass"
        ],
        "condition": {
          "functionBody": "return model.devices[arrayIndices].auth === true;"
        }
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].disableLogInfo",
          "devices[].switchInfoMenu",
          "devices[].refreshInterval",
          "devices[].volumeControl"
        ]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Branding",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].manufacturer",
          "devices[].modelName",
          "devices[].serialNumber",
          "devices[].firmwareRevision"
        ]
      }
    ]
  }]
}